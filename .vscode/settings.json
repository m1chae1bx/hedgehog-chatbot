{
    "editor.rulers": [
        100
    ],
    // "editor.formatOnSave": true,
    "python.formatting.provider": "none",
    "python.formatting.blackArgs": [
        "--line-length",
        "100"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=100"
    ],
    "cSpell.words": [
        "Abenomics",
        "davinci",
        "docstore",
        "FAISS",
        "Haruhiko",
        "langchain",
        "pretrained",
        "vectorstores"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
}
